@model PieShop.ViewModels.Home.IndexViewModel

<h2>@Model.Title</h2>


@*for extra small align on center from md and more align on start*@
<div class="row justify-content-center justify-content-md-start">
    @foreach (var pie in Model.Pies)
    {
        <div class="col-12 col-sm-10 col-md-6 col-lg-4 col-xl-4 pt-2 pb-2">
            @Html.Partial("PieOverviewSummary", pie)
        </div>
    }
</div>