@model PieShop.ViewModels.Account.LoginViewModel

<h2>
	Before contacting us, please log in or
	<a asp-action="Register">
		register!
	</a>
</h2>

<div class="row justify-content-center" style="margin-top: 1rem;">
	<div asp-validation-summary="All" class="text-danger"></div>

	<form asp-action="Login" method="post" role="form">
		<div class="form-group">
			<input asp-for="UserName" class="form-control" placeholder="User name"/>
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input asp-for="Password" class="form-control" placeholder="Password"/>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Log in</button>
	</form>
</div>